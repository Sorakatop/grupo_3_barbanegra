<h1>listado de productos disponibles en base de de datos</h1>
<div class="container">
    <% products.forEach(producto => { %>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <%= producto.name %> / <%= producto.brand %>
                </div>
                <img src="/images/productos/<%- producto.image %>" class="card-img-top" alt="">             
                <div class="card-footer">
                    <form action="/productos/eliminarProducto/<%= producto.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-primary">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>

</html>