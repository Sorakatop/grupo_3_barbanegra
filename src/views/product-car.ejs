                                    <h5 class="text-xl mt-8 ">Datos Personales</h5>
                                <div class="form-floating mx-2">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="nombre">
                                    <label for="floatingInput">Nombre</label>
                                </div>
                                <div class="form-floating mx-2">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="domicilio">
                                    <label for="floatingInput">Domicilio</label>
                                </div>
                                <div class="form-floating mx-2">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="ciudad">
                                    <label for="floatingInput">Ciudad</label>
                                </div>
                                <div class="form-floating mx-2">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="provincia">
                                    <label for="floatingInput">Provincia</label>
                                </div>
                                <div class="form-floating mx-2">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="cp">
                                    <label for="floatingInput">Codigo Postal</label>
                                </div>
                                <div class="form-floating mx-2">
                                    <input type="tel" class="form-control" id="floatingInput" placeholder="tel">
                                    <label for="floatingInput">Telefono</label>
                                </div>
                                </div>
                                <div class="form-payment-control col-span-2 md:col-span-1">
                                    <h5 class="mx-3 text-xl">Datos Tarjeta</h5>
                                        <div class="icon-pack flex justify-center">
                                        <i class="fab fa-cc-visa text-4xl text-blue-900	"></i>
                                        <i class="fab fa-cc-amex text-4xl text-blue-700"></i>
                                        <i class="fab fa-cc-mastercard text-4xl text-red-600"></i>
                                    </div>
                                    <div class="form-floating mx-2">
                                            <input type="text" class="form-control" id="floatingInput" placeholder="Titular">
                                            <label for="floatingInput">Titular Tarjeta</label>
                                    </div>
                                     <div class="form-floating mx-2">
                                            <input type="tel" class="form-control" id="floatingInput" placeholder="Tarjeta">
                                            <label for="floatingInput">Numeros</label>
                                     </div>
                                     <div class="form-floating mx-2">
                                        <input type="tel" class="form-control" id="floatingInput" placeholder="Anio">
                                        <label for="floatingInput">Mes</label>
                                    </div>
                                    <div class="form-floating mx-2">
                                        <input type="tel" class="form-control" id="floatingInput" placeholder="Anio-vencimiento">
                                        <label for="floatingInput">A√±o</label>                                        
                                    </div>
                                    <div class="form-floating mx-2">
                                        <input type="tel" class="form-control" id="floatingInput" placeholder="Anio-vencimiento">
                                        <label for="floatingInput">CCV</label>                                        
                                    </div>
                                </div>
                            </div>
                            </form>
                            <div class="checkout-form-btn col-span-2 w-full text-center">
                                <button class="h-10 w-4/5 rounded bg-black top-2 text-sm right-2 px-3 text-white hover:bg-gray-900 ">Finalizar Compra
                                </button>
                                                        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
