<%- include('./partials/head') %>

<body>
    <!-- HEADER -->
    <%- include('./partials/header') %>
    <main>
        <!--  Checkout payment -->
        <div class="desk-container p-3">
            <div class="main-form container grid grid-cols-2 auto-rows-auto">
                <div class="shop-cart-main col-span-2  text-center border-2 rounded-lg border-black bg-gray-100 shadow-lg">
                    <div class="shop-mobile cart grid grid-cols-2 p-2">
