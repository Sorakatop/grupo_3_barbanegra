<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
        <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
        <!-- Font Awesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
        
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
            rel="stylesheet">
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    
        <!-- Slick slider -->
    
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    
        <!-- Stylesheets -->
    
        <link rel="stylesheet" href="/stylesheets/home.css">
        <link rel="stylesheet" href="/stylesheets/style.css">
       
        <title>Barba Negra</title>
    
    </head>
<body>
    <div class="contGral">
    <!-- HEADER -->
    <%- include('./partials/header') %> 
    <main>
        <!-- HOME -->
        <!-- Slider -->
        <div class="slider">
            <ul>
                <li><img src="/images/banner/banner.jpg" alt=""></li>
                <li><img src="/images/banner/banner2.jpg" alt=""></li>
                <li><img src="/images/banner/banner3.jpg" alt=""></li>
                <li><img src="/images/banner/banner4.jpg" alt=""></li>
                <li><img src="/images/banner/banner5.jpg" alt=""></li>
                <li><img src="/images/banner/banner6.jpg" alt=""></li>
                <li><img src="/images/banner/banner7.jpg" alt=""></li>
                <li><img src="/images/banner/banner8.jpg" alt=""></li>
                <li><img src="/images/banner/banner9.jpg" alt=""></li>
            </ul>
        </div>       


        <!-- Our offers -->
        <div class="sectionTitle">
            <h3>NUESTRAS OFERTAS</h3>
        </div>


        <section class="cards">
        <% productsInSale.forEach(product => { %> 
            <article class="card card--1">

                <div class="card__info-hover">
                    <div class="card__offer-info">
                        <span class="card__discount"><%- product.discount !== 0 ? `${product.discount}%OFF`:"" %></span>
                    </div>
                </div>

                <div class="card__img"></div>
                <a href="/detalleProducto" class="card_link">
                    <div class="card__img--hover">
                        <img src="/images/productos/<%- product.image %>" alt="">
                    </div>
                </a>
                <div class="card__info bg-transparent">
                    <span class="card__brand"><%- product.brand %></span>
                    <h3 class="card__by"><%- product.name %></h3>
                    <span class="card__by"><%- product.price %>
                        <i class="fas fa-truck"></i>
                        <a href="/cart" class="card__cart" title="Cart"><i class="fas fa-cart-plus"></i></a>


                    </span>
                </div>
            </article>
            <% }) %> 

        </section>

        <!-- Our offers end -->



        <!-- Popular brands-->

        <div class="popular-brands">
            <div class="text-center brand-header">
                <h3>TRABAJAMOS CON LAS MEJORES MARCAS</h3>
            </div>

            <div class="brands-grid">
                <img src="/images/LOGOS/logowahl.jpeg" alt="">
                <img src="/images/LOGOS/logots.jpeg" alt="">
                <img src="/images/LOGOS/logoBaby.jpeg" alt="">
            </div>
        </div>

        <!-- Popular brand end -->

    

    <!-- HOME END -->

    <!-- FOOTER -->
    <%- include('./partials/footer') %> 
</main>
</div>
  <%- include('./partials/scripts') %> 
  
</body>

</html>