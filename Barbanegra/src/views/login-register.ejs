<!DOCTYPE html>
<html lang="es">
<!-- HEAD -->
<%- include('./partials/head') %>

<body>
  <!-- HEADER -->
  <%- include('./partials/header') %>
  <main>
    <% if ( locals.login  && login === 1)  { %>
    <div class="lcontainer">
      <% }else{ %>
      <div class="lcontainer sign-up-mode">
        <% } %>

        <div class="forms-lcontainer">
          <div class="signin-signup">
            <form action="/users/login" method="POST" class="sign-in-form" id="form-login">
              <h2 class="title">Iniciar sesión</h2>
              <div class="input-field border-2" id="login-email">
                <i class="fas fa-envelope"></i>
                <input type="email2" name='email' placeholder="email" id="email1" />
              </div>
              <span id="emailLoginErrors"></span>
              <% if (locals.errors && errors.email) { %>
              <br> <small class="text-red-600 ml-10 font-medium" id="errorsEmail">
                <%= errors.email.msg %>
                <!-- cambiar color de mensaje -->
              </small>
              <%}%>          
            <div class="input-field border-2" id="loginPass">
              <i class="fas fa-lock"></i>
              <input type="password" name='passwordlog' placeholder="Contraseña" id="loginPassInput" />
            </div>
            <span id="loginPassErrors"></span>
            <% if (locals.errors && errors.passwordlog) { %>
             <br> <small class="text-red-600 ml-10 font-medium" id="errorsPass1"><%= errors.passwordlog.msg %> </small>
              <% } %>
              <div class="form-ad-input_check">
                <!-- agrego check de recordar -->
                <input type="checkbox" name="remember" id="check-c">
                <label for="check">Recordar</label>
              </div>
              
              <input type="submit" value="Iniciar sesión" class="btn-log solid" />
              <p class="social-text">O inicie sesión con</p>
              <div class="social-media">
                <a href="#" class="social-icon">
                  <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="social-icon">
                  <i class="fab fa-twitter"></i>
                </a>
                <a href="#" class="social-icon">
                  <i class="fab fa-google"></i>
                </a>
                <a href="#" class="social-icon">
                  <i class="fab fa-linkedin-in"></i>
                </a>
              </div>
            </form>

            <form action="/users/register" method="POST" class="sign-up-form" id="registerForm">
              <h2 class="title">Registro</h2>
              <div class="input-field border-2" id="userInput">
                <i class="fas fa-user"></i>
                <input name="username" value="<%= locals.old && old.user %>" type="text" placeholder="Nombre"
                  id="username" />
              </div>
              <span id="usernameErrors"></span>
              <% if (locals.errors && errors.username) { %>
                <br><small class='text-red-600 ml-10 font-medium' id="usernameErrors">
                <%= errors.username.msg %>
                <!-- cambiar color de mensaje -->
              </span>
              <%}%>
              <div class="input-field border-2" id="email2Input">
                <i class="fas fa-envelope"></i>
                <input name ="email" value="<%= locals.old && old.email %>" type="email" placeholder="Correo
              electrónico" id="email2" />
          </div>
          <span id="emailErrors2"></span>
          <% if (locals.errors && errors.email) { %>
            <br><small class='text-red-600 ml-10 font-medium' id="">
            <%= errors.email.msg %>
            <!-- cambiar color de mensaje -->
          </small>
          <%}%>
              <div class="input-field border-2" id="passContainer">
                <i class="fas fa-lock"></i>
                <input name="password" type="password" placeholder="Contraseña" id="password"/>
              </div>
              <span id="pass2Errors"></span>
              <% if (locals.errors && errors.password) { %>
          <br><small class='text-red-600 ml-10 font-medium' id="errorsPass2"><%= errors.password.msg %> </small>
          <% } %>
          <div class="input-field border-2" id="passContainer2">
            <i class="fas fa-lock"></i>
            <input name="pass1" type="password" placeholder="Repetir Contraseña" id="password2" />
          </div>
          <span id="pass2Errors2"></span>
          <% if (locals.errors && errors.pass1) { %>
            <br><small class='text-red-600 ml-10 font-medium' id="errorsPass2"><%= errors.pass1.msg %> </small> <br>
            <% } %>
          <!-- <div class="termsCointainer">
                <input type="checkbox" name="" id="terms-check">
                <label for="check">Aceptar <a href="#" class="text-blue-600">terminos y condiciones</a></label>
              </div>  -->
              <span id="submitErrors"></span><br>
          <div class="submit-cointainer">
            <a href="/users/profile"><input type="submit" class="btn-log" value="Sign up" /></a> <br>

          </div>
          <p class="social-text">O inicie sesión con</p>
          <div class="social-media">
            <a href="#" class="social-icon">
              <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#" class="social-icon">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#" class="social-icon">
              <i class="fab fa-google"></i>
            </a>
            <a href="#" class="social-icon">
              <i class="fab fa-linkedin-in"></i>
            </a>
          </div>
          </form>

        </div>
      </div>

      <div class="panels-lcontainer ">
        <div class="panel left-panel">
          <div class="content">
            <h3>¿Nuevo aquí?</h3>
            <p>
              Unite a la comunidad BarberShop con un solo paso
            </p>
            <button class="btn-log transparent" id="sign-up-btn">
              Registrarme
            </button>
          </div>
          <img src="/img/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>¿Ya es miembro?</h3>
            <p>
              Cada amigo nuevo es una nueva aventura! Comencemos.
            </p>
            <button class="btn-log transparent" id="sign-in-btn">
              Iniciar sesión
            </button>
          </div>
          <img src="/img/register.svg" class="image" alt="" />
        </div>
      </div>
    </div>
  </main>
  <script src="/javascript/script.js"></script>
  <script src="/javascript/register-loginValidation.js"></script>
  <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
</body>

</html>